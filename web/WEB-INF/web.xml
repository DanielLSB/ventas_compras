<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>sr_ventas_detalle</servlet-name>
        <servlet-class>controlador.sr_ventas_detalle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_ventas</servlet-name>
        <servlet-class>controlador.sr_ventas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_compras</servlet-name>
        <servlet-class>controlador.sr_compras</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_compras_detalle</servlet-name>
        <servlet-class>controlador.sr_compras_detalle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sr_ventas_detalle</servlet-name>
        <url-pattern>/sr_ventas_detalle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_ventas</servlet-name>
        <url-pattern>/sr_ventas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_compras</servlet-name>
        <url-pattern>/sr_compras</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_compras_detalle</servlet-name>
        <url-pattern>/sr_compras_detalle</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
